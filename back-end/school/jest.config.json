{
  "reporters": [
    [
      "jest-html-reporter",
      {
        "pageTitle": "Test Report",
        "outputPath": "./test/report/test-report.html"
      }
    ],
    [
      "github-actions",
      {
        "silent": false
      }
    ],
    "summary"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}